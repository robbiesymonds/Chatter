{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ESNext", "dom"],
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true
  },
  "include": ["src/**/*"]
}
